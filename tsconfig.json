{
  "compilerOptions": {
//    "baseUrl": ".",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
//    "skipLibCheck": true,
    "esModuleInterop": true,
//    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "rootDir": ".",
    "outDir": "build",
    "types": ["node", "jest"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
